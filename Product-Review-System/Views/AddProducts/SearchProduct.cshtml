@model IEnumerable<Product_Review_System.Models.addProduct>
@{
    ViewBag.Title = "SearchProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>SearchProduct</h2>

<p>
    @using (Html.BeginForm("SearchProduct", "addProducts", FormMethod.Post))

    {
        @Html.TextBox("search")
        <input style="background-color:black" class="btn btn-primary btn-lg" type="submit" value="search" />
    
}

    <table class="table table-striped">
        <thead>
            <tr>
                <th> name </th>
                <th> price </th>
                <th> description </th>
                <th> category </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color:red">
                        No Match Any Document
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.name</td>
                        <td>@item.price</td>
                        <td>@item.description</td>
                        <td>@item.category_id</td>
                    </tr>
                }
            }
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
